{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "list": {
      "headers": {
        "Accept": "application/json"
      },
      "id_expression": "{{ PrimaryKey }}",
      "method": "GET",
      "payload_property": "value",
      "url": "{{ properties.datatype }}"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://{{@ environment @}}.superoffice.com/{{@ account_id @}}/api/v1/%s",
  "verify_ssl": true
}