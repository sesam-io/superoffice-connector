[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-salelist",
      "type": "dataset"
    },
    "transform": [
      {
        "operation": "{{@ datatype @}}-lookup",
        "replace_entity": false,
        "system": "{{@ system @}}",
        "type": "rest"
      },
      {
        "rules": {
          "default": [
            [
              "add",
              "$sale_id",
              "_S._id"
            ],
            [
              "merge",
              "_S.response"
            ],
            [
              "add",
              "_id",
              [
                "string",
                "_T.QuoteId"
              ]
            ],
            [
              "if",
              [
                "eq",
                "_T.AcceptedQuoteAlternativeId",
                0
              ],
              [
                "remove",
                "AcceptedQuoteAlternativeId"
              ]
            ]
          ]
        },
        "type": "dtl"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-salelist",
    "metadata": {
      "supports_since": true
    },
    "namespaced_identifiers": false,
    "source": {
      "operation": "sale{{@ datatype @}}-list",
      "since_property_name": "updatedDate",
      "supports_since": true,
      "system": "{{@ system @}}",
      "type": "rest",
      "updated_expression": "{{ updatedDate }}"
    },
    "type": "pipe"
  }
]