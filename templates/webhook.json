[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-all",
    "namespaced_identifiers": false,
    "source": {
      "operation": "{{@ datatype @}}-list",
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-all",
      "type": "dataset"
    },
    "transform": {
      "rules": {
        "default": [
          [
            "copy",
            "*"
          ],
          [
            "add",
            "$healthy",
            [
              "if",
              [
                "eq",
                "_S.State",
                "Active"
              ],
              true,
              false
            ]
          ]
        ]
      },
      "type": "dtl"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-wipe",
    "comment": "Used to delete all the {{@ datatype @}}s.",
    "namespaced_identifiers": false,
    "pump": {
      "mode": "manual"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-collect",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "comment",
              "We only delete the {{@ datatype @}}s that have targetUrl pointing to our service_url - i.e. the ones we created."
            ],
            [
              "discard",
              [
                "matches",
                "{{@ service_url @}}*",
                "_S.TargetUrl"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "operation": "{{@ datatype @}}-delete",
        "response_status_property": "status_code",
        "system": "{{@ system @}}",
        "trigger_on": {
          "key": "_deleted",
          "value": false
        },
        "type": "rest"
      }
    ],
    "type": "pipe"
  }
]