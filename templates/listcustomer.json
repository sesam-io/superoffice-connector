[
  {
    "_id": "{{@ system @}}-list-{{@ datatype @}}-items-share",
    "add_namespaces": false,
    "batch_size": 1,
    "compaction": {
      "keep_versions": 100
    },
    "exclude_completeness": [
      "{{@ system @}}-list-{{@ datatype @}}-items-share"
    ],
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-list-{{@ datatype @}}-items-transform",
      "type": "dataset"
    },
    "transform": {
      "properties": {
        "operation_delete_properties": {
          "datatype": "List/{{@ datatype @}}/Items",
          "primaryKey": "Id"
        },
        "operation_insert_properties": {
          "datatype": "List/{{@ datatype @}}/Items",
          "primaryKey": "Id"
        },
        "operation_lookup_properties": {
          "datatype": "List/{{@ datatype @}}/Items",
          "primaryKey": "Id"
        },
        "operation_update_properties": {
          "datatype": "List/{{@ datatype @}}/Items",
          "primaryKey": "Id"
        },
        "primary_key": "Id",
        "rest_system": "{{@ system @}}",
        "share_dataset": "{{@ system @}}-list-{{@ datatype @}}-items-share"
      },
      "template": "transform-share-rest",
      "type": "template"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-list-{{@ datatype @}}-items-collect",
    "exclude_completeness": [
      "{{@ system @}}-list-{{@ datatype @}}-items-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "operation": "alternate_list",
      "properties": {
        "datatype": "List/{{@ datatype @}}/Items",
        "ordering": "name asc",
        "skip": "0",
        "top": "20"
      },
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "_id",
              [
                "string",
                "_S.Id"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "primary_key": "Id",
          "share_dataset": "{{@ system @}}-list-{{@ datatype @}}-items-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]